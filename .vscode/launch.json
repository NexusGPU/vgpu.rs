    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'hypervisor'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=hypervisor",
                    "--package=hypervisor"
                ],
                "filter": {
                    "name": "hypervisor",
                    "kind": "bin"
                }
            },
            "env": {
                "TF_ENABLE_LOG": "1",
                "TF_LOG_PATH": "logs/tf.log",
            },
            "args": [
                "--sock-path",
                "/tensor-fusion/worker/sock/",
                "--ipc-path",
                "/tensor-fusion/worker/ipc"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}