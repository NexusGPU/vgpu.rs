    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'hypervisor'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=hypervisor",
                    "--package=hypervisor"
                ],
                "filter": {
                    "name": "hypervisor",
                    "kind": "bin"
                },
            },
            "env": {
                "TF_ENABLE_LOG": "1",
                "GPU_NODE_NAME": "gpu-2"
            },
            "args": [
                "--enable-k8s",
                "--gpu-metrics-file",
                "logs/metrics.log"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}