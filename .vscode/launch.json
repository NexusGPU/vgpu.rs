    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'tensor-fusion-hypervisor'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=tensor-fusion-hypervisor",
                    "--package=tensor-fusion-hypervisor"
                ],
                "filter": {
                    "name": "tensor-fusion-hypervisor",
                    "kind": "bin"
                }
            },
            "args": [
                "--sock-path",
                "/tensor-fusion/worker/sock/"
            ],
            "cwd": "${workspaceFolder}"
        }
    ]
}